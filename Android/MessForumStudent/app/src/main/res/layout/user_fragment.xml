<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="5dp"
    android:background="@color/colorBackg"
    android:layout_weight="2">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/scroll"
        android:scrollbarSize="8dip"
        tools:ignore="MissingConstraints"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:background="@color/colorBackg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">



            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorBackg"
                android:backgroundTint="@color/colorBBackg"
                android:backgroundTintMode="src_atop"
                >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item_title_student_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardBackgroundColor="@color/colorTitle"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="30dp"
                    app:contentPadding="4dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/item_add_student"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:paddingEnd="0dp"
                        android:text="@string/info"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextTitle"
                        android:textSize="@dimen/textTitle"
                        android:textStyle="bold"
                        android:paddingLeft="15dp"
                        android:paddingRight="0dp" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/colorHorizon"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:contentPaddingBottom="15dp"
                    app:contentPaddingTop="60dp">

                    <!--<View
                        android:layout_width="35dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/colorDHorizon"/>

                    <View
                        android:layout_width="35dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="end"
                        android:background="@color/colorDHorizon"/>-->

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_title_reg_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="35dp"
                        app:cardBackgroundColor="@color/colorDHorizon"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="30dp"
                        app:contentPadding="4dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_reg_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textAlignment="center"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/textTitle"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_title_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="35dp"
                        app:cardBackgroundColor="@color/colorDHorizon"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="30dp"
                        app:contentPadding="4dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textAlignment="center"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/textTitle"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_title_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="215dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="35dp"
                        app:cardBackgroundColor="@color/colorDHorizon"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="30dp"
                        app:contentPadding="4dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textAlignment="center"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/textTitle"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_title_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="310dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="35dp"
                        app:cardBackgroundColor="@color/colorDHorizon"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="30dp"
                        app:contentPadding="4dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textAlignment="center"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/textTitle"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_title_dept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="405dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="35dp"
                        app:cardBackgroundColor="@color/colorDHorizon"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="30dp"
                        app:contentPadding="4dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_dept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textAlignment="center"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/textTitle"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_title_room_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="500dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="35dp"
                        app:cardBackgroundColor="@color/colorDHorizon"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="30dp"
                        app:contentPadding="4dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_room_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textAlignment="center"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/textTitle"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_title_summa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="560dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="30dp"
                        app:cardBackgroundColor="@color/colorHorizon"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp"
                        app:contentPadding="4dp">


                    </com.google.android.material.card.MaterialCardView>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>